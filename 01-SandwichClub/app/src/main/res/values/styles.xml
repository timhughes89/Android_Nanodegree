<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Sandwichclub" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.Sandwichclub.Title.Light" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorTextTitleLight</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Theme.Sandwichclub.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorTextBody</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Sandwichclub.Body" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorTextBody</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="Theme.Sandwichclub.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar" />
    <style name="Theme.Sandwichclub.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Sandwichclub.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
